@page
@model ETBDApp.Pages.MyNutritionDiary.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Nutrition Diary</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MealTypes.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MealTypes.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meal.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meal.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meal.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meal.EndDate)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meal.FoodMeals[0].Food.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meal.FoodMeals[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meal.FoodMeals[0].PortionTypes.Type)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meal.FoodMeals) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Food.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PortionTypes.Type)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Meal.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>


