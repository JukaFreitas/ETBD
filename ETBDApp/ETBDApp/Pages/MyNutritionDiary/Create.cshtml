@page
@model ETBDApp.Pages.MyNutritionDiary.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Nutrition Diary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MealTypes.Type" class="control-label"></label>
                <select asp-for="SelectedMealTypeId" class ="form-control" asp-items="@Model.SelectedListMealType"> 
                    <option value="0">--Select Meal--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Meal.StartDate" class="control-label"></label>
                <input asp-for="Meal.StartDate" class="form-control" />
                <span asp-validation-for="Meal.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meal.EndDate" class="control-label"></label>
                <input asp-for="Meal.EndDate" class="form-control" />
                <span asp-validation-for="Meal.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Foods" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
